@model AgentRegisterViewModel

@{
    ViewData["Title"] = "Регистрация на агент";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.FirstName"></label>
                <input class="form-control" aria-required="true" asp-for="@Model.FirstName" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.LastName"></label>
                <input class="form-control" aria-required="true" asp-for="@Model.LastName" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email"></label>
                <input class="form-control " aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.PhoneNumber"></label>
                <input class="form-control " aria-required="true" asp-for="@Model.PhoneNumber" />
                <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="OfficeId"></label>
                <select asp-for="OfficeId" class="form-control">
                    @foreach (var city in Model.Offices)
                    {
                        bool isSelected = false;
                        if (Model.OfficeId != default(Guid))
                        {
                            isSelected = city.Id == Model.OfficeId;
                        }
                        <option selected="@isSelected" value="@city.Id">@city.Number</option>
                    }
                </select>
                <span asp-validation-for="OfficeId" class="small text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Password"></label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.Password" />
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.ConfirmPassword"></label>
                <input class="form-control" type="password" autocomplete="new-password" aria-required="true" asp-for="@Model.ConfirmPassword" />
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
            </div>
            
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-info m-2">Регистрация</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}