@model OfficeUpdateViewModel

@{
    ViewData["Title"] = "Промяна на офис";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <h3 class="text-center">Офис № @Model.Number в град @Model.City</h3>
            <form method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <input type="hidden" asp-for="City"/>
                <input type="hidden" asp-for="Number"/>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Address" class="form-label"></label>
                    <input asp-for="@Model.Address" class="form-control" placeholder="Адрес" aria-required="true" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Телефонен номер" aria-required="true" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-info">Запази промените</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 