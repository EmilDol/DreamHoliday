@using DreamHoliday.ViewModels.Enums;
@model List<OfficeCardViewModel>

@{
    ViewData["Title"] = "Офиси";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div>
    <form method="get" asp-action="Index" asp-controller="Office">
        <div>
            <label for="exampleSelect1" class="form-label mt-4">Сортиране по номер</label>
            <select class="form-select" name="order" id="exampleSelect1">
                <option selected="@(ViewBag.OrderDirection == OrderDirection.Ascending)" value="@OrderDirection.Ascending">Възходящ ред</option>
                <option selected="@(ViewBag.OrderDirection == OrderDirection.Descending)" value="@OrderDirection.Descending">Низходящ ред</option>
            </select>
        </div>
        <div>
            <label for="exampleSelect1" class="form-label mt-4">Град</label>
            <select class="form-select" name="cityId" id="exampleSelect1">
                <option selected="@(ViewBag.CityId == null)" value="@null">Всички градове</option>
                @foreach (var item in ViewBag.Cities)
                {
                    <option selected="@(item.Id == ViewBag.CityId)" value="@item.Id">@item.Name</option>
                }
            </select>
        </div>
        <div>
            <label class="col-form-label mt-4" for="inputDefault">Максимален брой агенти</label>
            <input name="agents" value="@(ViewBag.Agents == 0 ? null : ViewBag.Agents)" type="text" class="form-control" placeholder="Брой агенти" id="inputDefault">
        </div>
        <div>
            <label class="col-form-label mt-4" for="inputDefault">Максимален брой клиенти</label>
            <input name="clients" value="@(ViewBag.Clients == 0 ? null : ViewBag.Clients)" type="text" class="form-control" placeholder="Брой клиенти" id="inputDefault">
        </div>
        <button type="submit" class="btn btn-primary">Търси</button>
    </form>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Номер на офис</th>
                <th scope="col">Град</th>
                <th scope="col">Адрес</th>
                <th scope="col">Телефонен номер</th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Дейстивия</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="office-update-info-row">@item.Number</td>
                    <td class="office-update-info-row">@item.City.Name</td>
                    <td class="office-update-info-row">@item.Address</td>
                    <td class="office-update-info-row">@item.PhoneNumber</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td>
                            <div class="d-flex flex-row">
                                <form class="m-1" style="margin-left: 0px;" method="get" asp-action="Update" asp-controller="Office" asp-route-id="@item.Id">
                                    <button type="submit" class="btn btn-primary">Редактиране</button>
                                </form>
                                <button onclick="confirmDelete('@item.Number', '@item.Id')" type="submit" class="btn btn-danger">Изтрий</button>
                            </div>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        function confirmDelete(officeNumber, id) {
            var result = confirm("Сигурни ли сте, че искате да изтриете офис № " + officeNumber + "?");

            if (result) {
                window.location.href = '/Office/Delete?id=' + id;
            }
        }
    </script>
}