@model OfficeAddViewModel

@{
    ViewData["Title"] = "Добавяне на офис";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Number" class="form-label"></label>
                    <input asp-for="@Model.Number" class="form-control" placeholder="Номер на офис" aria-required="true" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Address" class="form-label"></label>
                    <input asp-for="@Model.Address" class="form-control" placeholder="Адрес" aria-required="true" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-control" placeholder="Телефонен номер" aria-required="true" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label for="exampleSelect1" class="form-label">Град</label>
                    <select class="form-select" asp-for="CityId" id="exampleSelect1">
                        @foreach (var item in Model.Cities)
                        {
                            <option selected="@(item.Id == Model.CityId)" value="@item.Id">@item.Name</option>
                        }
                    </select>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-info">Добави</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 