@model CountryViewModel

@{
    ViewData["Title"] = "Промяна на държава";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <h3 class="text-center">@Model.Name</h3>
            <form method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id"/>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" placeholder="Име" aria-required="true" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.PhoneCode" class="form-label"></label>
                    <input asp-for="@Model.PhoneCode" class="form-control" placeholder="Телефонен код" aria-required="true" />
                    <span asp-validation-for="PhoneCode" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button id="login-submit" type="submit" class="btn btn-info">Запази промените</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
} 