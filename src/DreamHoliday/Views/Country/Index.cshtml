@using DreamHoliday.ViewModels.Enums;
@model List<CountryViewModel>

@{
    ViewData["Title"] = "Държави";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div>
    <fieldset >
        <legend>Филтри</legend>
        <form method="get" asp-action="Index" asp-controller="Country">
            <div>
                <label for="exampleSelect1" class="form-label mt-4">Сортиране по име</label>
                <select class="form-select" name="order" id="exampleSelect1">
                    <option selected="@(ViewBag.Order == OrderDirection.Ascending)" value="@OrderDirection.Ascending">Възходящ ред</option>
                    <option selected="@(ViewBag.Order == OrderDirection.Descending)" value="@OrderDirection.Descending">Низходящ ред</option>
                </select>
            </div>
            <div>
                <label class="col-form-label mt-4" for="inputDefault">Име</label>
                <input name="name" value="@(ViewBag.Name == "" ? null : ViewBag.Name)" type="text" class="form-control" placeholder="Име" id="inputDefault">
            </div>
            <button type="submit" class="btn btn-primary">Търси</button>
        </form>
    </fieldset>
    @{
        string errorDel = TempData["Error"]?.ToString() ?? null;
    }
    @if (!string.IsNullOrEmpty(errorDel))
    {
        <p class="text-danger">@errorDel</p>
    }
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Име</th>
                <th scope="col">Телефонен код</th>
                <th scope="col">Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="office-update-info-row">@item.Name</td>
                    <td class="office-update-info-row">@item.PhoneCode</td>
                    <td>
                        <div class="d-flex flex-row">
                            <form class="m-1" style="margin-left: 0px;" method="get" asp-action="Update" asp-controller="Country" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-primary">Редактиране</button>
                            </form>
                            <button onclick="confirmDelete('@item.Name', '@item.Id')" type="submit" class="btn btn-danger">Изтрий</button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <fieldset>
        <legend>Добавяне на държава</legend>
        <form method="post" asp-action="Add" asp-controller="Country">
            @{
                string error = TempData["Error"]?.ToString() ?? null;
            }

            @if (!string.IsNullOrEmpty(error))
            {
                <p class="text-danger">@error</p>
            }

            <label class="col-form-label mt-4" for="inputDefault">Име</label>
            <input name="name" type="text" class="form-control" placeholder="Име" id="inputDefault">

            <label class="col-form-label mt-4" for="inputDefault">Телефонен код</label>
            <input name="phoneCode" type="text" class="form-control" placeholder="Телефонен код" id="inputDefault">

            <button type="submit" class="btn btn-success">Добави</button>
        </form>
    </fieldset>
</div>

@section Scripts{
    <script>
        function confirmDelete(name, id) {
            var result = confirm("Сигурни ли сте, че искате да изтриете държавата " + name + " и всички градове в нея?");

            if (result) {
                window.location.href = '/Country/Delete?id=' + id;
            }
        }
    </script>
}