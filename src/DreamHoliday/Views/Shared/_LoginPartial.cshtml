@using DreamHoliday.Data.DbModels;
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Здравей @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-action="Logout" asp-controller="Auth">
                <button type="submit" class="nav-link btn btn-link text-dark">Изход</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Регистрация</a>
            <div class="dropdown-menu">
                <a class="nav-link text-dark" asp-action="RegisterClient" asp-controller="Auth">Клиент</a>
                <div class="dropdown-divider"></div>
                <a class="nav-link text-dark" asp-action="RegisterAgent" asp-controller="Auth">Агент</a>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-action="Login" asp-controller="Auth">Вход</a>
        </li>
    }
</ul>
